{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.local", "**/.env"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["dist/**", ".next/**", "out/**"],
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "test": {
      "outputs": ["coverage/**"],
      "cache": false,
      "dependsOn": ["^build"]
    },
    "test:run": {
      "outputs": ["coverage/**"],
      "cache": false,
      "dependsOn": ["^build"]
    }
  }
}
